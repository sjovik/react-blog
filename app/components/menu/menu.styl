@import '../../frame/theme'
@import './navList'

area-opacity = 0.9

@keyframes fadein {
  0% {
    opacity 0
  }
  100% {
    opacity area-opacity
  }
}
.area
  box-sizing border-box
  background color-main
  position fixed
  top (size-header-height - 5px)
  left 0
  height 'calc(100% - %s)' % size-header-height
  width 100%
  opacity area-opacity
  animation fadein 0.4s trans-main
  overflow-y auto
  overflow-x hidden
  
  @media (min-width: media-width-small)
    top calc(50% - 5px)
    height auto
    
  @media (min-width: media-width-medium)
    top 33%
    width 300px
  
  &Hidden
    display none
    
    @media (min-width: media-width-medium)
      display block

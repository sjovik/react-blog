@import '../../frame/theme'

.navItem
  height 50px
  line-height 50px
  border-bottom 1px solid transparent
  transition border-color 0.4s trans-main
  white-space nowrap
  cursor pointer
  
  &:hover,
  &:active,
  &:focus  
    border-bottom 1px solid color-sub--light
  
  @media (min-width: media-width-small) and (max-width: media-width-medium)
    display inline-block
    margin-right 40px

.navLink
  display block
  color color-sub--light
  text-decoration none
  font-size 16px
  font-weight bold
  position relative
  text-transform uppercase

.subMenuLink
  margin-right 20px
  backface-visibility hidden
  
  &:after
    content ' >'
    padding-left 2px
    transition transform 0.4s trans-main
    font-family font-header
  
    @media(min-width: media-width-small) and (max-width: media-width-medium)
      position absolute
      right -18px
      transform rotate(90deg)
  
  &[data-submenu=true]
    &:after
      @media(min-width: media-width-small) and (max-width: media-width-medium)
        transform rotate(270deg)
        
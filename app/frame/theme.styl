// # Media
media-width-small = 980px
media-width-medium = 1500px

// # Colors
color-background = #FFF
color-main = rgba(211,221,230,1)
color-secondary = rgba(244,188,176,1)
// color-secondary = rgba(200,150,140,1)
color-sub--light = rgba(99,111,122,1)
color-sub--dark = rgba(57,64,69,1) 
// Text
color-header-text = color-sub--light
color-body-text = color-sub--dark
color-colored-background-text = color-background
color-link-underline = color-secondary

// # Fonts
font-sans = Quicksand, sans-serif
font-serif = 'EB Garamond', serif

// # Sizes
size-footer-height = 250px
size-header-height = 150px
size-textcol-minwidth = 300px
size-textcol-maxwidth = 630px
width-menu = 320px

// Text
size-h1 = 40px
size-h2 = 26px
size-text-body = 18px

// # Margins & Paddings
margin-body-left--wide = 100px
margin-text-standard = 12px
padding-text-standard = 20px

// # Transitions
trans-main = cubic-bezier(0.23, 1, 0.32, 1)

// # Animations
anim-bounce = 0.7s trans-main infinite alternate

// # Z-indicies
z-head = 999
z-menu = z-head + 1
z-menubutton = z-menu + 1

